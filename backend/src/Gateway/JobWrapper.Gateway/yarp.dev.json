{
  "reverseProxy": {
    "routes": {
      "users": {
        "clusterId": "users",
        "match": {
          "path": "users-service/{**catchall}"
        },
        "transforms": [
          {
            "pathPattern": "{**catchall}"
          }
        ]
      },
      "statistics": {
        "clusterId": "vacancies",
        "match": {
          "path": "vacancies-service/{**catchall}"
        },
        "transforms": [
          {
            "pathPattern": "{**catchall}"
          }
        ]
      }
    },
    "clusters": {
      "users": {
        "destinations": {
          "destination": {
            "address": "http://localhost:6010"
          }
        }
      },
      "vacancies": {
        "destinations": {
          "destination": {
            "address": "http://localhost:6020"
          }
        }
      }
    }
  }
}
